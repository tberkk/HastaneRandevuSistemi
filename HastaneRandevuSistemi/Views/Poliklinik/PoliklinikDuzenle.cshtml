@model HastaneRandevuSistemi.Models.Poliklinik

@{
    ViewData["Title"] = "PoliklinikDuzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Poliklinik</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PoliklinikDuzenle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PoliklinikID" />
            <div class="form-group">
                <label asp-for="PoliklinikAd" class="control-label"></label>
                <input asp-for="PoliklinikAd" class="form-control" />
                <span asp-validation-for="PoliklinikAd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
