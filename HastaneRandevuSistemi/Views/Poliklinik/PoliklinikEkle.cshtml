@model HastaneRandevuSistemi.Models.Poliklinik
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Poliklinik Ekle"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Localizer["Poliklinik Ekle"]</h1>

<h4>@Localizer["Poliklinik"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PoliklinikEkle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PoliklinikAd" class="control-label"></label>
                <input asp-for="PoliklinikAd" class="form-control" />
                <span asp-validation-for="PoliklinikAd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HastaneID" class="control-label"></label>
                <select asp-for="HastaneID" class ="form-control" asp-items="ViewBag.List"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
