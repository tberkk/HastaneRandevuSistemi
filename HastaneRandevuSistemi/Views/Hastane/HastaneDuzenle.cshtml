@model HastaneRandevuSistemi.Models.Hastane
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Hastane Düzenle"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Localizer["Hastane Düzenle"]</h1>

<h4>@Localizer["Hastane"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="HastaneDuzenle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HastaneID" />
            <div class="form-group">
                <label asp-for="HastaneAd" class="control-label"></label>
                <input asp-for="HastaneAd" class="form-control" />
                <span asp-validation-for="HastaneAd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
