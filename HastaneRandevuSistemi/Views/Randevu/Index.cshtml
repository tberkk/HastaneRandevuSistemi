@model IEnumerable<Randevu>

@{
    ViewData["Title"] = "Index";
}

<h5>@TempData["msj"]</h5>
<h5>@ViewBag.msj</h5>
<h4>Doktorlar</h4>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Gün</th>
            <th scope="col">Saat</th>
            <th scope="col">Doktor Adı</th>
            <th scope="col">Poliklinik</th>
            <th scope="col">Hastane</th>
        </tr>
    </thead>
    <tbody>
        @{
            var i = 1;
        }
        @foreach (var x in Model)
        {

            <tr>
                <th>@i</th>
                @{
                    i++;
                }
                <td>@x.RandevuGun</td>
                <td>@x.RandevuSaat</td>
                <td>@x.Doktor.DoktorAd @x.Doktor.DoktorSoyad</td>
                <td>@x.Poliklinik.PoliklinikAd</td>
                <td>@x.Hastane.HastaneAd</td>
                <td><a href="/Randevu/RandevuDuzenle/@x.RandevuID" class="btn btn-warning"><i class="bi bi-pencil-square"></i></a></td>
                <td><a href="/Randevu/RandevuSil/@x.RandevuID" class="btn btn-outline-danger"><i class="bi bi-x"></i></a></td>
            </tr>
        }
    </tbody>
</table>

<a href="/Randevu/RandevuEkle" class="btn btn-primary">Yeni Randevu Ekle</a>