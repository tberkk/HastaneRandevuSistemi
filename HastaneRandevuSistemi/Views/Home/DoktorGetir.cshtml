@model List<Doktor>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Doktorlar";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h4>@ViewBag.data</h4>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">@Localizer["Doktor Adı"]</th>
        </tr>
    </thead>
    <tbody>
        @{
            var i = 1;
        }
        @foreach (var x in Model)
        {
            <tr>
                <th>@i</th>
                @{
                    i++;
                }
                <td>@x.DoktorAd @x.DoktorSoyad</td>
                <td><a href="/Home/RandevuGetir/@x.DoktorID" class="btn btn-primary">@Localizer["Randevular"]</a></td>
            </tr>
        }
    </tbody>
</table>